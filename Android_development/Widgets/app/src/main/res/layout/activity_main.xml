<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#121212"> <!-- Dark background -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Styled TextView -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_to_the_widgets_app"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="#1E1E1E"
                android:padding="16dp"
                android:elevation="2dp"/>

            <!-- Button -->
            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/click_me"
                android:layout_marginTop="8dp"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF" />

            <!-- ImageView with Selector -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/images"
                android:src="@drawable/sample_image"
                android:scaleType="centerCrop"
                android:layout_marginTop="8dp"
                android:background="#1E1E1E"
                android:elevation="2dp"/>

            <Button
                android:id="@+id/toggleImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/toggle_image"
                android:layout_marginTop="8dp"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF" />

            <!-- ProgressBar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:indeterminateTint="#6200EE"
                android:visibility="gone" />

            <!-- EditText -->
            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#1E1E1E"
                android:hint="@string/enter_your_name"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:padding="12dp"
                android:importantForAutofill="no"
                android:inputType="textCapCharacters" />

            <!-- CalendarView -->
            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#1E1E1E" />

            <!-- DateTime Picker -->
            <Button
                android:id="@+id/dateTimeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_date_time"
                android:layout_marginTop="8dp"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF" />

            <!-- ListView -->
            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="#1E1E1E"
                android:divider="#6200EE"
                android:dividerHeight="1dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
